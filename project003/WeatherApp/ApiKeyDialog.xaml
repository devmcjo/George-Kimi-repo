<Window x:Class="WeatherApp.ApiKeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="API 키 설정" Height="250" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#FF2D2D2D" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="OpenWeatherMap API 키 설정" 
                  FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="1" Text="API 키를 입력하세요. (https://openweathermap.org/api 에서 묶료로 발급 가능)" 
                  FontSize="12" Foreground="#FFAAAAAA" TextWrapping="Wrap" Margin="0,0,0,15"/>
        
        <TextBox Grid.Row="2" x:Name="ApiKeyTextBox" Height="35" FontSize="14" 
                Padding="5" Background="#FF1E1E1E" Foreground="White" 
                BorderBrush="#FF555555" BorderThickness="1"/>
        
        <TextBlock Grid.Row="3" x:Name="ErrorText" Text="" FontSize="12" 
                  Foreground="#FFFF6B6B" Margin="0,10,0,0"/>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelButton" Content="취소" Width="80" Height="35" 
                   Margin="0,0,10,0" Click="CancelButton_Click"
                   Background="#FF555555" Foreground="White" BorderThickness="0"/>
            <Button x:Name="SaveButton" Content="저장" Width="80" Height="35" 
                   Click="SaveButton_Click"
                   Background="#FF4CAF50" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
